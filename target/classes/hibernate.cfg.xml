<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
        <!-- database connection -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/blog?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=Turkey</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		
        
         <!-- hibernate config -->
		<property name="showsql">true</property>
		<property name="connection.autocommit">true</property>
		<property name="hbm2ddl.auto">create</property>
<!-- 		<property name="hbm2ddl.auto">update</property> -->

		<!-- Türkçe karakter sorununu çözecek -->
		<property name="hibernate.connection.useUnicode">true</property>
		<property name="hibernate.connection.characterEncoding">UTF-8</property>

		<!-- HQL ile SQL dönüşümünü sağlar dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!--Database kontrolu -->
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">40</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.timeout">1</property>
		<property name="hibernate.c3p0.max_statements">0</property>
		<property name="hibernate.c3p0.idle_test_period">1</property>
		<property name="hibernate.c3p0.preferredTestQuery">select 1;</property>

		<!-- second level -->
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
	</session-factory>
</hibernate-configuration>
